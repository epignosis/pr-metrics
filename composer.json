{
  "name": "epignosis/pr-metrics",
  "description": "Create PR metrics for Github repositories",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "metrics",
    "PR"
  ],
  "authors": [
    {
      "name": "Vassilis Poursalidis",
      "email": "vpoursalidis@talentlms.com",
      "homepage": "https://www.talentlms.com/"
    }
  ],
  "config": {
    "platform": {
      "php": "8.3"
    }
  },
  "require": {
    "php": "^8.3",
    "ext-json": "*",
    "vlucas/phpdotenv": "^5",
    "php-di/php-di": "^7",
    "guzzlehttp/guzzle": "^7",
    "kevinrob/guzzle-cache-middleware": "^6",
    "league/flysystem": "^3",
    "caseyamcl/guzzle_retry_middleware": "^2",
    "nesbot/carbon": "^3",
    "symfony/property-access": "^7"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3",
    "phpstan/phpstan": "^2",
    "phpunit/phpunit": "^12"
  },
  "autoload": {
    "psr-4": {
      "TalentLMS\\Metrics\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "vendor/bin/php-cs-fixer fix --config=phpcs.php",
    "docker": "docker run --rm --tty --volume $PWD:/app composer:2.8.2",

    "check:style": "@phpcs --dry-run --format=txt --verbose --diff",
    "check:static": "vendor/bin/phpstan analyse -c phpstan.neon",
    "check:tests": "vendor/bin/phpunit --configuration phpunit.xml --testsuite pr-metrics",
    "check:all": [
      "@check:style",
      "@check:static",
      "@check:tests"
    ],

    "fix:style": "@phpcs",

    "docker:shell": "@docker /bin/bash",
    "docker:upgrade": "@docker composer upgrade",
    "docker:check:all": "@docker composer check:all"
  }
}
